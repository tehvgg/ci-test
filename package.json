{
	"name": "ci-test",
	"version": "1.0.0",
	"description": "Testing Continuous Integration initiatives",
	"main": "build/index.js",
	"scripts": {
		"precommit": "lint-staged",
		"test": "jest -c jest.config.js",
		"build": "rollup -c rollup.config.js",
		"lint": "eslint src/**/*.js tests/spec/**/*.js",
		"lint-write": "prettier-eslint {src,tests}/**/*.js --write --list-different"
	},
	"lint-staged": {
		"linters": {
			"{src,tests}/**/*.js": [
				"npm run lint-write",
				"git add"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tehvgg/ci-test.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tehvgg/ci-test/issues"
	},
	"homepage": "https://github.com/tehvgg/ci-test#readme",
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-jest": "^22.2.2",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-preset-env": "^1.6.1",
		"eslint": "^4.17.0",
		"husky": "^0.14.3",
		"jest": "^22.3.0",
		"lint-staged": "^6.1.1",
		"prettier": "^1.10.2",
		"prettier-eslint-cli": "^4.7.1",
		"rollup": "^0.55.5",
		"rollup-plugin-babel": "^3.0.3"
	}
}
